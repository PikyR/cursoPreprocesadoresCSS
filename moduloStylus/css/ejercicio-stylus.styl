// VARIABLES
fuente-base = 'Lato', sans-serif
fuente-titulo = 'Oswald', sans-serif

color-primario-oscuro = #333333
color-secundario = #8841DA
color-claro = #FFFFFF

// MIXINS
contenedor()
  display: flex
  width: 90%
  margin: 0 auto
  padding: 30px 0

caja-sombra()
  background-color: color-claro  
  box-shadow: 0 20px 33px 0 rgba(0,0,0,0.20)

*
  box-sizing: border-box
  margin: 0
  padding: 0

html
  font-size: 62.5%

body 
  font-family: fuente-base
  font-size: 1.6rem
  color: color-primario-oscuro

.buscador
  display: block
  width: 100%
  height: 250px
  padding: 100px
  background-image: url('../images/cover.jpg')
  background-size: cover
  background-repeat: no-repeat
  background-position: center
  text-align: center

  &__input
    width: 75%
    height: 60px
    padding: 20px
    border: none
    border-radius: 30px
    font-size: 2.5rem
    outline: none

.encabezado--con-filtros
  justify-content: space-between
  align-items: baseline
  contenedor()

  h2
    margin-top: 10px
    text-transform: uppercase
    font-weight: 500
    font-size: 5rem
    font-family: fuente-titulo
  
  .filtros
    width: 250px
    height: 75px
    padding: 20px
    caja-sombra()
    span
      text-transform: uppercase
      font-family: fuente-titulo
    a 
      margin-left: 20px
      font-size: 25px
      text-decoration: none
      color: color-primario-oscuro

.contenido 
  margin-bottom: 40px
  justify-content: space-evenly
  contenedor()

.caja
  max-width: 400px
  caja-sombra()
  
  &__imagen
    img
  
  &__contenido
    padding: 20px
    background-color: color-claro

    span
      text-transform: uppercase
      color: color-secundario
      font-family: fuente-titulo
    h3
      text-transform: uppercase
      font-weight: normal
      font-family: fuente-titulo

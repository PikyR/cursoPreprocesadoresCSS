// VARIABLES
fuente-base = 'Lato', sans-serif
fuente-titulo = 'Oswald', sans-serif

color-primario-oscuro = #333333
color-secundario = #8841DA
color-claro = #FFFFFF

// MIXINS
contenedor()
  display: flex
  flex-wrap: wrap
  width: 96%
  margin: 0 auto
  padding: 30px 0

caja-sombra()
  background-color: color-claro  
  box-shadow: 0 20px 33px 0 rgba(0,0,0,0.20)

// FUNCIONES
opacidad(color,cantidad)
  alpha(color,cantidad)

// LOOPS
for header in 3 2 1
  h{header}
    font-size: 3.5rem - (0.5rem*header)
    margin-bottom: 10px

titulos(fuente)
  if fuente == fuente-base
    font-family: fuente-base
  else 
    font-family: fuente-titulo
    font-weight: 600
    text-transform: uppercase

// GLOBALES
*
  box-sizing: border-box
  margin: 0
  padding: 0

html
  font-size: 62.5%

body 
  font-size: 1.6rem
  color: color-primario-oscuro
  titulos(fuente-base)
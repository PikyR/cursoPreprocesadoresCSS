// VARIABLES
fuente-base = 'Lato', sans-serif
fuente-titulo = 'Oswald', sans-serif

color-primario-oscuro = #333333
color-secundario = #8841DA
color-claro = #FFFFFF

// MIXINS
contenedor()
  display: flex
  width: 96%
  margin: 0 auto
  padding: 30px 0

caja-sombra()
  background-color: color-claro  
  box-shadow: 0 20px 33px 0 rgba(0,0,0,0.20)

opacidad(color,cantidad)
  alpha(color,cantidad)

*
  box-sizing: border-box
  margin: 0
  padding: 0

html
  font-size: 62.5%

body 
  font-family: fuente-base
  font-size: 1.6rem
  color: color-primario-oscuro




.estadistica--articulos
  height: 70px
  padding: 20px
  border-top: 1px solid alpha(color-primario-oscuro, 0.30)

  display: flex
  justify-content: space-evenly
  
  li 
    list-style: none
    color: opacidad(color-primario-oscuro, .30)
    
    span
    display: inline-block
    margin-left: 20px
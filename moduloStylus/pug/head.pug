mixin caja(imagen, category, title, summary)
	if imagen == ""
		article.caja
			.caja__contenido
				span.caja__categoria=category
				h3=title
				p=summary
			
			+estadistica
	else
		article.caja
			a.caja__imagen(href="#"): img(src="../images/"+imagen)
			
			.caja__contenido
				span.caja__categoria=category
				h3=title
				p=summary
			
			+estadistica

mixin estadistica
	ul.estadistica--articulos
		li
			i.fas.fa-share
			span 275
		li
			i.fas.fa-eye
			span 275
		li
			i.fas.fa-comment-alt
			span 12


